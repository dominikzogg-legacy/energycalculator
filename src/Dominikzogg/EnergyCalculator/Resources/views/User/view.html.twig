{% extends "@DominikzoggEnergyCalculator/layout.html.twig" %}

{% import "@DominikzoggEnergyCalculator/macro.html.twig" as macro %}

{% block pagetitle %}{{ (transPrefix~".view.title")|trans() }}{% endblock %}
{% block title %}{{ (transPrefix~".view.title")|trans() }}{% endblock %}

{% block body %}
    {{ macro.viewButtons(object, editRoute, editRole, listRoute, listRole, transPrefix) }}
    <table class="table table-striped">
        <tr>
            <td>{{ (transPrefix~".view.id")|trans() }}</td>
            <td>{{ object.id }}</td>
        </tr>
        <tr>
            <td>{{ (transPrefix~".view.username")|trans() }}</td>
            <td>{{ object.username }}</td>
        </tr>
        <tr>
            <td>{{ (transPrefix~".view.email")|trans() }}</td>
            <td>{{ object.email }}</td>
        </tr>
        <tr>
            <td>{{ (transPrefix~".view.roles")|trans() }}</td>
            <td>{{ object.roles|join(', ') }}</td>
        </tr>
        <tr>
            <td>{{ (transPrefix~".view.enabled")|trans() }}</td>
            <td>{% if object.enabled %}{{ (transPrefix~".view.istrue")|trans() }}{% else %}{{ (transPrefix~".view.isfalse")|trans() }}{% endif %}</td>
        </tr>
    </table>
    {{ macro.viewButtons(object, editRoute, editRole, listRoute, listRole, transPrefix) }}
{% endblock %}
