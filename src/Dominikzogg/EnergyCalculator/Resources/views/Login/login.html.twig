{% extends "@DominikzoggEnergyCalculator/layout.html.twig" %}

{% block pagetitle %}{{ "login.title"|trans() }}{% endblock %}

{% block body %}
    <h1>{{ "login.title"|trans() }}</h1>
    <form action="{{ url('login_check') }}" method="post" class="form-horizontal">
        {{ error }}
        <div class="form-group row">
            <label class="control-label col-lg-2 required" for="_username">{{ "login.label.username"|trans() }}</label>
            <div class="col-lg-10">
                <input id="_username" type="text" name="_username" value="{{ last_username }}" />
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-lg-2 required" for="_password">{{ "login.label.password"|trans() }}</label>
            <div class="col-lg-10">
                <input id="_password" type="password" name="_password" value="" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <input class="btn btn-success" type="submit" value="{{ "login.label.submit"|trans() }}" />
            </div>
        </div>
    </form>
{% endblock %}