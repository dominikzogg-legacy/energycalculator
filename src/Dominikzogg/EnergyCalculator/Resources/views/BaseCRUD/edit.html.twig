{% extends "@DominikzoggEnergyCalculator/layout.html.twig" %}

{% block pagetitle %}{{ (transprefix~".edit.title")|trans() }}{% endblock %}

{% block body %}
    <form action="{{ url(editroute, {'id': entity.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
        <h1>{{ (transprefix~".edit.title")|trans() }}</h1>
        {{ form_widget(form, {'form_type': 'horizontal'}) }}
        <div class="form-group">
            <button type="submit" class="btn btn-success" name="save" value="{{ (transprefix~".edit.save")|trans() }}">
                <i class="glyphicon glyphicon-save"></i>
            </button>
            {% if entity.id and showroute|default(false) %}
                <a class="btn btn-default" href="{{ url(showroute, {'id': entity.id }) }}" title="{{ (transprefix~".edit.show")|trans() }}">
                    <i class="glyphicon glyphicon-eye-open"></i>
                </a>
            {% endif %}
            <a class="btn btn-default" href="{{ url(listroute) }}" title="{{ (transprefix~".edit.back")|trans() }}">
                <i class="glyphicon glyphicon-list-alt"></i>
            </a>
        </div>
    </form>
{% endblock %}