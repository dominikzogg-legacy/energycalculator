{% extends "@DominikzoggEnergyCalculator/layout.html.twig" %}

{% block pagetitle %}{{ (transprefix~".edit.title")|trans() }}{% endblock %}

{% block body %}
    <form action="{{ url(editroute, {'id': entity.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
        <h1>{{ (transprefix~".edit.title")|trans() }}</h1>
        {{ form_widget(form, {'form_type': 'horizontal'}) }}
        <div class="form-group">
            <input class="btn btn-success" type="submit" name="save" value="{{ (transprefix~".edit.save")|trans() }}" />
            <input class="btn btn-default" type="submit" name="saveandclose" value="{{ (transprefix~".edit.saveandclose")|trans() }}" />
            <input class="btn btn-default" type="submit" name="saveandnew" value="{{ (transprefix~".edit.saveandnew")|trans() }}" />
            {% if entity.id and showroute|default(false) %}
                <a class="btn btn-default" href="{{ url(showroute, {'id': entity.id }) }}">{{ (transprefix~".edit.show")|trans() }}</a>
            {% endif %}
            <a class="btn btn-default" href="{{ url(listroute) }}">{{ (transprefix~".edit.back")|trans() }}</a>
        </div>
    </form>
{% endblock %}