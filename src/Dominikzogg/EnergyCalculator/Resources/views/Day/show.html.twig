{% extends "@DominikzoggEnergyCalculator/layout.html.twig" %}

{% block pagetitle %}{{ (transprefix~".show.title")|trans() }}{% endblock %}

{% block body %}
    <h1>{{ (transprefix~".show.title")|trans() }}</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ (transprefix~".show.name")|trans() }}</th>
                <th>{{ (transprefix~".show.amount")|trans() }}</th>
                <th>{{ (transprefix~".show.calorie")|trans() }}</th>
                <th>{{ (transprefix~".show.protein")|trans() }}</th>
                <th>{{ (transprefix~".show.carbohydrate")|trans() }}</th>
                <th>{{ (transprefix~".show.fat")|trans() }}</th>
            </tr>
        </thead>
        <tbody>
            {% for comestibleWithinDay in entity.comestiblesWithinDay %}
                <tr>
                    <td>{{ comestibleWithinDay.name }}</td>
                    <td>{{ comestibleWithinDay.amount|round(1) }}</td>
                    <td>{{ comestibleWithinDay.calorie|round(1) }}</td>
                    <td>{{ comestibleWithinDay.protein|round(1) }}</td>
                    <td>{{ comestibleWithinDay.carbohydrate|round(1) }}</td>
                    <td>{{ comestibleWithinDay.fat|round(1) }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td><strong>{{ (transprefix~".show.total")|trans() }}</strong></td>
                <td></td>
                <td><strong>{{ entity.calorie|round(1) }}</strong></td>
                <td><strong>{{ entity.protein|round(1) }}</strong></td>
                <td><strong>{{ entity.carbohydrate|round(1) }}</strong></td>
                <td><strong>{{ entity.fat|round(1) }}</strong></td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ (transprefix~".show.key")|trans() }}</th>
                <th>{{ (transprefix~".show.value")|trans() }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ (transprefix~".show.weight")|trans() }}</td>
                <td>{{ entity.weight|round(1) }}</td>
            </tr>
            <tr>
                <td>{{ (transprefix~".show.abdominalCircumference")|trans() }}</td>
                <td>{{ entity.abdominalCircumference|round(1) }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-default" href="{{ url(editroute, {'id': entity.id }) }}" title="{{ (transprefix~".show.edit")|trans() }}">
        <i class="glyphicon glyphicon-pencil"></i>
    </a>
    <a class="btn btn-default" href="{{ url(listroute) }}" title="{{ (transprefix~".show.back")|trans() }}">
        <i class="glyphicon glyphicon-list-alt"></i>
    </a>
{% endblock %}