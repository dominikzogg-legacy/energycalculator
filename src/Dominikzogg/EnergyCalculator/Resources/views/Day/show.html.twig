{% extends "@DominikzoggEnergyCalculator/layout.html.twig" %}

{% block pagetitle %}{{ (transprefix~".show.title")|trans() }}{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ (transprefix~".show.name")|trans() }}</th>
                <th>{{ (transprefix~".show.amount")|trans() }}</th>
                <th>{{ (transprefix~".show.calorie")|trans() }}</th>
                <th>{{ (transprefix~".show.protein")|trans() }}</th>
                <th>{{ (transprefix~".show.carbohydrate")|trans() }}</th>
                <th>{{ (transprefix~".show.fat")|trans() }}</th>
            </tr>
        </thead>
        <tbody>
            {% for comestibleWithinDay in entity.comestiblesWithinDay %}
                <tr>
                    <td>{{ comestibleWithinDay.name }}</td>
                    <td>{{ comestibleWithinDay.amount }}</td>
                    <td>{{ comestibleWithinDay.calorie }}</td>
                    <td>{{ comestibleWithinDay.protein }}</td>
                    <td>{{ comestibleWithinDay.carbohydrate }}</td>
                    <td>{{ comestibleWithinDay.fat }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td><strong>{{ (transprefix~".show.total")|trans() }}</strong></td>
                <td></td>
                <td><strong>{{ entity.calorie }}</strong></td>
                <td><strong>{{ entity.protein }}</strong></td>
                <td><strong>{{ entity.carbohydrate }}</strong></td>
                <td><strong>{{ entity.fat }}</strong></td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ (transprefix~".show.key")|trans() }}</th>
                <th>{{ (transprefix~".show.value")|trans() }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ (transprefix~".show.weightMorning")|trans() }}</td>
                <td>{{ entity.weightMorning }}</td>
            </tr>
            <tr>
                <td>{{ (transprefix~".show.weightEvening")|trans() }}</td>
                <td>{{ entity.weightEvening }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn" href="{{ url(editroute, {'id': entity.id}) }}">{{ (transprefix~".show.edit")|trans() }}</a>
    <a class="btn" href="{{ url(listroute) }}">{{ (transprefix~".show.back")|trans() }}</a>
{% endblock %}