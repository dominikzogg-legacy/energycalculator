{% extends "@DominikzoggEnergyCalculator/layout.html.twig" %}

{% import "@DominikzoggEnergyCalculator/macro.html.twig" as macro %}

{% block pagetitle %}{{ (transPrefix~".view.title")|trans() }}{% endblock %}
{% block title %}{{ (transPrefix~".view.title")|trans() }}{% endblock %}

{% block body %}
    {{ macro.viewButtons(object, editRoute, editRole, listRoute, listRole, transPrefix) }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ (transPrefix~".view.name")|trans() }}</th>
                <th>{{ (transPrefix~".view.amount")|trans() }}</th>
                <th>{{ (transPrefix~".view.calorie")|trans() }}</th>
                <th>{{ (transPrefix~".view.protein")|trans() }}</th>
                <th>{{ (transPrefix~".view.carbohydrate")|trans() }}</th>
                <th>{{ (transPrefix~".view.fat")|trans() }}</th>
            </tr>
        </thead>
        <tbody>
            {% for comestibleWithinDay in object.comestiblesWithinDay %}
                <tr>
                    <td>{{ comestibleWithinDay.name }}</td>
                    <td>{{ comestibleWithinDay.amount|round(1) }}</td>
                    <td>{{ comestibleWithinDay.calorie|round(1) }}</td>
                    <td>{{ comestibleWithinDay.protein|round(1) }}</td>
                    <td>{{ comestibleWithinDay.carbohydrate|round(1) }}</td>
                    <td>{{ comestibleWithinDay.fat|round(1) }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td><strong>{{ (transPrefix~".view.total")|trans() }}</strong></td>
                <td></td>
                <td><strong>{{ object.calorie|round(1) }}</strong></td>
                <td><strong>{{ object.protein|round(1) }}</strong></td>
                <td><strong>{{ object.carbohydrate|round(1) }}</strong></td>
                <td><strong>{{ object.fat|round(1) }}</strong></td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ (transPrefix~".view.key")|trans() }}</th>
                <th>{{ (transPrefix~".view.value")|trans() }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ (transPrefix~".view.weight")|trans() }}</td>
                <td>{{ object.weight|round(1) }}</td>
            </tr>
        </tbody>
    </table>
    {{ macro.viewButtons(object, editRoute, editRole, listRoute, listRole, transPrefix) }}
{% endblock %}
